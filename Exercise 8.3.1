//This program reads in five scores that fills an array

#include "stdafx.h"
#include <iostream>
using namespace std;

void main()
{
	int scores[5]; int i;
	int highest, differences;

	cout << " Please enter 5 scores: " << endl;
	for (i=0; i<5; i++)
	cin >> scores[i];
	
	highest = scores[0];
	for (i = 1; i < 5; i++)
		if (highest < scores[i])
			highest = scores[i];
	cout << "The highest score is " << highest << endl;

	
	cout << " The scores and their differences from the highest are:" << endl;
	for (i = 0; i < 5; i++)
	{
		differences = highest - scores[i];

		cout << scores[i] << " off by " << differences << endl;
	}
}
