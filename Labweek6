// lab7.cpp swap numbers
//

#include "stdafx.h"
#include <iostream>
using namespace std;
void swap(int & x, int & y);

int main()
{
	int x, y;
	cout << "Please enter two integers X and Y";
	cin >> x >> y;
	swap(x, y);

	cout << " X in main is : " << x << endl;
	cout << " Y in main is : " << y << endl;
	return 0 ;
 }

void swap(int & x, int & y)
{
	cout << "You entered X is: ";
	cout << x << endl;
	cout << "You entered Y is: ";
	cout << y << endl;
	// do swapping algorithm
	int temp;
	temp= x;
	x = y;
	y = temp;

	cout << "After swap the value X now is: ";
	cout << x << endl;
	cout << "After swap the value Y now is: ";
	cout << y << endl;
}
