// Labweek5 : Create a mini calculator
//

#include <iostream>
#include <string>
using namespace std;

int main()
{
	char op;
	int x, y;
	string name;

	cout << "Please select an operator either + or - or * or /: ";
	cin >> op;

	cout << "Please enter two numbers, x and y: ";
	cin >> x >> y;

	switch (op)
	{
	case '+':
		cout <<  x + y << endl;
			break;

	case '-':
		cout <<  x - y << endl;
			break;

	case '*':
		cout << x * y << endl;
			break;

	case '/':
		cout << x / y << endl;
			break;

	default :
		cout << "Error!" << endl;
			break;
	}

	cout << "Please enter your name:" ;
	cin >> name;
	getline(cin, name);
	cout << "My name is :" << name << endl;

	return 0;
}
