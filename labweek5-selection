// Labweek5.cpp : using selection control structure
//

#include "stdafx.h"
#include <iostream>
#include <string>
using namespace std;


int main()
{
	int x, z;
	cout << "Please enter the positive value for x: ";
	cin >> x ;
	if (x > 0)
		cout << "x="<< x<< endl;

	cout << "Please enter the positive value for z:";
	cin >> z ;
	if (z > 0)
		cout << "z="<< z<< endl;

	string name;
	cout << "Please enter a name:";
	cin >> name;
	getline(cin, name); 


	
    return 0;
}
