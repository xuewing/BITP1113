
// This program uses a structure to record pollution data.

#include <iostream>
#include <iomanip>
using namespace std;

struct data {
	char name[20];
	int id;
	double reading[5];
	double total;
};

int main()
{
	struct data pollution;
	double total = 0;


	cout << " Please enter area's name and id number: " << endl;
	cin >> pollution.name >> pollution.id;
	for (int i = 0; i < 5; i++) {
		cout << "Please enter pollution readings: " << endl;
		cin >> pollution.reading[i];
		total += pollution.reading[i];
	}
	total == pollution.total;

	cout << "Area's name: " << pollution.name << endl;
	cout << "Area's id: " << pollution.id << endl;
	cout << fixed << showpoint << setprecision(2);
	for (int i = 0; i < 5; i++) {
		cout << "Pollution reading: " << pollution.reading[i] << endl;
	}
	cout << "Total: " << total << endl;

}
